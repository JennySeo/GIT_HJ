<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivAvartar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_launcher_round"
        android:gravity="center"

        android:padding="5dp"

        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        app:layout_constraintLeft_toRightOf="@id/twTitle">

        <TextView
            android:id="@+id/twTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="5dp"
            android:text="Widget Two"
            android:textColor="@android:color/holo_red_light"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/twDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="5dp"
            android:paddingTop="10dp"
            android:text="Widget Three"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/twCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="5dp"
            android:paddingTop="10dp"
            android:text="Widget dfdfd"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>